/* Main Widget Background */
QWidget#login {
    background-color: #DDFFBC;
}

/* LineEdit Styles */
QLineEdit {
    border: 2px solid #FFD79A;
    border-radius: 5px;
    padding: 5px;
    background-color: #FEFFDE;
    font-size: 14px;
}

QLineEdit:focus {
    border: 2px solid #0078d7;
}

/* PushButton Styles */
QPushButton {
    border: 2px solid #FFD79A;
    border-radius: 5px;
    padding: 5px 15px;
    background-color: #FEFFDE;
    color: #000000;
    font-size: 14px;
}

QPushButton:hover {
    background-color: #FFD79A;
}

QPushButton:pressed {
    background-color: #004494;
}

/* TableWidget Styles */
QTableWidget {
    border: 2px solid #c4c4c4;
    border-radius: 5px;
    font-size: 14px;
}

QHeaderView::section {
    background-color: #FFFAC0;
    color: #9DE6E8;
    padding: 5px;
    border: 1px solid #c4c4c4;
}

QTableWidget::item {
    padding: 5px;
}

QTableWidget::item:selected {
    background-color: #FFD79A;
    color: #FFFAC0;
}

QTableWidget::item:hover {
    background-color: #FFD79A;
}

/* ScrollBar Styles */
QScrollBar:vertical {
    border: none;
    background: #f0f0f0;
    width: 12px;
    margin: 15px 0 15px 0;
}

QScrollBar::handle:vertical {
    background: #c4c4c4;
    min-height: 20px;
    border-radius: 5px;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0;
}

QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background: none;
}

/* QDateEdit Styles */
QDateEdit {
    border: 2px solid #FFD79A;
    border-radius: 5px;
    padding: 5px;
    background-color: #FEFFDE;
    font-size: 14px;
}

QDateEdit:focus {
    border: 2px solid #0078d7;
}

/* ComboBox Styles */
QComboBox {
    border: 2px solid #FFD79A;
    border-radius: 5px;
    padding: 5px;
    background-color: #FEFFDE;
    font-size: 14px;
    min-width: 6em;
}

QComboBox:focus {
    border: 2px solid #0078d7;
}

QComboBox::drop-down {
    border: none;
}

QComboBox::down-arrow {
    image: url(down_arrow.png); /* Thay đổi icon mũi tên nếu cần */
}

QComboBox::down-arrow:on {
    top: 1px;
    left: 1px;
}

QComboBox QAbstractItemView {
    border: 2px solid #FFD79A;
    border-radius: 5px;
    background-color: #FEFFDE;
    font-size: 14px;
    selection-background-color: #FFD79A;
}

/* TabWidget Styles */
QTabWidget::pane {
    border: 2px solid #FFD79A;
    border-radius: 5px;
    background-color: #FEFFDE;
    padding: 10px;
}

QTabBar::tab {
    background: #FFD79A;
    border: 2px solid #FFD79A;
    border-radius: 5px;
    padding: 10px;
    font-size: 14px;
    min-width: 100px;
}

QTabBar::tab:selected {
    background: #9DE6E8;
    color: #000000;
}

QTabBar::tab:!selected {
    background: #FEFFDE;
    color: #9DE6E8;
}

QTabBar::tab:hover {
    background: #9DE6E8;
    color: #FFFFFF;
}

QTabBar::tab:top:selected {
    border-bottom-color: none;
}

QTabBar::tab:bottom:selected {
    border-top-color: none;
}

QTabBar::tab:left:selected {
    border-right-color: none;
}

QTabBar::tab:right:selected {
    border-left-color: none;
}
/* PlainTextEdit Styles */
QPlainTextEdit {
    border: 2px solid #FFD79A;
    border-radius: 5px;
    padding: 5px;
    background-color: #FEFFDE;
    font-size: 13pt; /* Tăng cỡ chữ lên 16pt */
    color: #000000; /* Màu chữ đen */
}

QPlainTextEdit:focus {
    border: 2px solid #0078d7;
}</string>
